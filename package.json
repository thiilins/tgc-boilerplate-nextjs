{
  "name": "boilerplate-next-ts",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint src --max-warnings=0",
    "postinstall": "husky install",
    "test": "jest",
    "test:watch": "yarn test --watch",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "generate": "yarn plop --plopfile generators/plopfile.cjs",
    "push:patch": "npm version patch && git push",
    "push:minor": "npm version minor && git push",
    "push:major": "npm version major && git push"
  },
  "lint-staged": {
    "src/**/*": [
      "yarn lint --fix",
      "yarn test --findRelatedTests --bail"
    ]
  },
  "dependencies": {
    "next": "15.0.3",
    "next-pwa": "^5.6.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "styled-components": "^6.0.7"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.0.0",
    "@storybook/builder-webpack5": "^8.0.0",

    "@storybook/manager-webpack5": "^6.5.14",
    "@storybook/react": "^8.0.0",
    "@storybook/testing-library": "^0.2.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.2.4",
    "@types/react": "18.3.8",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.0.3",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-storybook": "^0.8.0",
    "husky": "^9.0.7",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-styled-components": "^7.1.1",
    "lint-staged": "^15.0.1",
    "plop": "^4.0.0",
    "prettier": "3.3.3",
    "storybook-addon-next": "^1.7.1",
    "typescript": "^5.0.3",
    "typescript-styled-plugin": "^0.18.2"
  },
  "resolutions": {
    "styled-components": "^5"
  }
}
